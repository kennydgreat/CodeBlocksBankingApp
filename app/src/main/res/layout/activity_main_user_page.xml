<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_page_toolbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@color/colorDarkBlue"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/savings_imageview_button"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:elevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_page_toolbar"
            app:layout_constraintVertical_bias="0.031"
            app:srcCompat="@drawable/main_user_page_account_button_pic2" />

        <ImageView
            android:id="@+id/checkings_imageview_button"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:elevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savings_imageview_button"
            app:srcCompat="@drawable/main_user_page_account_button_pic2"
            app:layout_constraintBottom_toTopOf="@+id/investments_imageview_button" />

        <ImageView
            android:id="@+id/investments_imageview_button"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_page_toolbar"
            app:layout_constraintVertical_bias="0.931"
            app:srcCompat="@drawable/main_user_page_account_button_pic2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="21dp"
            android:text="@string/savings"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/savings_imageview_button"
            app:layout_constraintHorizontal_bias="0.245"
            app:layout_constraintLeft_toLeftOf="@+id/savings_imageview_button"
            app:layout_constraintRight_toRightOf="@+id/savings_imageview_button"
            app:layout_constraintTop_toTopOf="@+id/savings_imageview_button"
            app:layout_constraintVertical_bias="0.218"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/checking"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/checkings_imageview_button"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintLeft_toLeftOf="@+id/checkings_imageview_button"
            app:layout_constraintRight_toRightOf="@+id/checkings_imageview_button"
            app:layout_constraintTop_toTopOf="@+id/checkings_imageview_button"
            app:layout_constraintVertical_bias="0.246"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/investments"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/investments_imageview_button"
            app:layout_constraintHorizontal_bias="0.286"
            app:layout_constraintLeft_toLeftOf="@+id/investments_imageview_button"
            app:layout_constraintRight_toRightOf="@+id/investments_imageview_button"
            app:layout_constraintTop_toTopOf="@+id/investments_imageview_button"
            app:layout_constraintVertical_bias="0.194" />

        <TextView
            android:id="@+id/savings_amount_textview_on_main_user_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="21dp"
            android:text="@string/amount"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/savings_imageview_button"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintLeft_toLeftOf="@+id/savings_imageview_button"
            app:layout_constraintRight_toRightOf="@+id/savings_imageview_button"
            app:layout_constraintTop_toTopOf="@+id/savings_imageview_button"
            app:layout_constraintVertical_bias="0.705" />

        <TextView
            android:id="@+id/checking_amount_textview_on_main_user_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/amount"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/checkings_imageview_button"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintLeft_toLeftOf="@+id/checkings_imageview_button"
            app:layout_constraintRight_toRightOf="@+id/checkings_imageview_button"
            app:layout_constraintTop_toTopOf="@+id/checkings_imageview_button"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/investments_amount_textview_on_main_user_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/amount"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/investments_imageview_button"
            app:layout_constraintHorizontal_bias="0.335"
            app:layout_constraintLeft_toLeftOf="@+id/investments_imageview_button"
            app:layout_constraintRight_toRightOf="@+id/investments_imageview_button"
            app:layout_constraintTop_toTopOf="@+id/investments_imageview_button"
            app:layout_constraintVertical_bias="0.576"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/background_light"
        app:headerLayout="@layout/navigation_drawer_header_layout"
        app:itemBackground="@color/colorDarkBlue"
        app:itemTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:itemTextColor="@color/colorAccent"
        app:menu="@menu/my_navigation_items"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

</android.support.v4.widget.DrawerLayout>
